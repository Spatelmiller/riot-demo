{
  "name": "riot-demo",
  "version": "1.0.0",
  "description": "League of Legends Stats Checker using Riot API",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "server": "tsx src/server/index.ts",
    "server:dev": "tsx watch src/server/index.ts",
    "frontend": "cd frontend-simple && node server.js",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run frontend\"",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "league-of-legends",
    "riot-api",
    "stats",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.3",
    "@types/react": "^19.1.13",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/node-cache": "^4.2.5",
    "axios": "^1.12.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "node-cache": "^5.1.2"
  }
}
